@model SecondLife.Domain.DTO.UserLoginDTO

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1 class="text-center">Login</h1>
    <form asp-action="Login" method="post">
        <div class="row w-50 mx-auto">
            <div class="form-group col-12">
                <div class="row justify-content-center">
                    <div class="col-8">
                        Email <br />
                        <input asp-for="Email" placeholder="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="row w-50 mx-auto">
            <div class="form-group col-12">
                <div class="row justify-content-center">
                    <div class="col-8">
                        Password <br />
                        <input asp-for="Password" placeholder="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="row w-50 mx-auto">
            <div class="form-group col-12">
                <div class="row justify-content-center">
                    <div class="col-8">
                        <p>
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row w-50 mx-auto justify-content-center mt-4">
            <div class="col-8 text-center">
                <button type="submit" class="btn btn-success w-100">Log in</button>
                <a asp-action="Register" asp-controller="Account">Not registered?</a>
            </div>
        </div>


    </form>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}