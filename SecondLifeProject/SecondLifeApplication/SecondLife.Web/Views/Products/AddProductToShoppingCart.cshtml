@model SecondLife.Domain.DTO.AddProductToShoppingCartDTO
@{
    ViewData["Title"] = "Add to Shopping Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add Product To Your Shopping Cart</h1>
<hr />
<div class="container">
    <div class="row">
        <div class="col-5 m-auto">
            <form asp-action="AddProductToShoppingCart" method="post">
                <input type="hidden" asp-for="ProductId" />
                <div class="form-group">
                    <label asp-for="Product.ProductName"></label>
                    <input asp-for="Product.ProductName" disabled class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Quantity"></label>
                    <input asp-for="Quantity" max="@Model.MaxQuantity" min="1" class="form-control" />
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Add to Cart" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>
</div>